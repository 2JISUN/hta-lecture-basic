<%@page import="util.ScriptWriter"%>
<%@page import="java.sql.ResultSet"%>
<%@page import="java.sql.PreparedStatement"%>
<%@page import="common.JDBCConnect"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<%
//0.전역변수 할당
//get : request.getParameter를 사용하여 사용자가 입력한 정보를 받아옵니다.
String userID = request.getParameter("userID");
String userPW = null;
String userName = null;
String zipCode = null;
String address = null;
String regDate = null;


//1. driver 찾기
//2. db연동
JDBCConnect jdbcConn = new JDBCConnect();  //Oracle 데이터베이스에 연결을 수행

//3. 조회 : 쿼리 작성 + 데이터 가져오기
//3-1. 쿼리 작성
String sql = "select * from member where id = ?";

//3-2. 데이터 db에 저장하기
//set : pstmt.setString를 사용하여 사용자가 입력한 정보를 db에 저장합니다.
PreparedStatement pstmt = null; //Prepared : SQL 문장을 실행하기 위한 객체입니다.
pstmt = jdbcConn.conn.prepareStatement(sql); //prepare : PreparedStatement 객체를 생성하는 메서드

pstmt.setString(1,userID); //set : 아이디


//4. db 에서 데이터 가져오기
//rs는 SQL 쿼리의 결과 집합으로 JDBC 객체임
//executeQuery()는 쿼리를 데이터베이스로 보내고 그 결과를 가져온다. 

ResultSet rs = null;
rs = pstmt.executeQuery();

if(rs.next()){
	userPW = rs.getString("password");
	userName = rs.getString("name");
	zipCode = rs.getString("zipCode");
	address = rs.getString("address");
	regDate = rs.getString("regDate");
} else {
	ScriptWriter.alertAndBack(response, "서버 오류입니다. 조그만 기다려~..");
}
jdbcConn.close();


%>

<%@ include file="../include/header.jsp" %>
<table class="table-striped">
<tbody>
    <tr>
      <th scope="row">ID</th>
      <td><%= userID%></td>
    </tr>
    <tr>
      <th scope="row">password</th>
      <td><%= userPW%></td>
    </tr>
    <tr>
      <th scope="row">name</th>
      <td><%= userName%></td>
    </tr>
        <tr>
      <th scope="row">zip code</th>
      <td><%= zipCode%></td>
    </tr>
     <tr>
      <th scope="row">address</th>
      <td><%= address%></td>
    </tr>
         <tr>
      <th scope="row">regDate</th>
      <td><%= regDate%></td>
    </tr>
  </tbody>
</table>


<%@ include file="../include/footer.jsp" %>